<div class="menu-padding">
	<div class="std-box">
	  <% if current_user %>
	  	<div>Signed in with: </div>
	  	<div><strong><%= current_user.email %></strong></div>
	    <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
	  <% else %>
	    <%= link_to "Sign in", new_user_session_path %>
	    <%= link_to "Sign up", new_user_registration_path %>
	  <% end %>
	</div>

	<div><%= link_to "Create New Game", new_path %></div>

	<% @all_games.each do |game| %>
		<div class="std-box">
			<%= link_to show_path(game), class: "clickable-box" do %>
				<div>Game #<%= game.id%></div>
				<div>White: <%= game.white.email %></div>
				<div>Black: <%= game.black.email %></div>
				<div><%= game.boards.last.white_to_move ? "White" : "Black" %> to move</div>
			<% end %>
		</div>
	<% end %>
</div>